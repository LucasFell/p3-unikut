    public static void main(String[] args) {
        Unikut social = new Unikut();

        Scanner s = new Scanner(System.in);
        String login, nickName, password, passwordConfirm;
        String loginStart, nickNameStart,passwordStart;//,passwordConfimStart;
        
        loginStart ="Conta Mestra";
        nickNameStart ="Conta Mestra";
        passwordStart ="Conta Mestra";
        //passwordConfimStart ="Conta Mestra";
        social.criarConta(loginStart, nickNameStart,passwordStart/*,passwordConfimStart*/);
        
        System.out.println("Bem vindo ao UNIKUT!\n");
        menuStart();
        int opcao = s.nextInt();
        s.nextLine();
        while (opcao != 3) {
            switch (opcao) {
                case 1 -> {
                    //Criar Nova Conta
                    System.out.print("Criar Login: ");
                    login = s.nextLine();
                    
                    while (social.verificaLogin(login)) {
                        System.out.print("Erro:\nLogin Já Existente\nPor Favor criar outro Login: ");
                        login = s.nextLine();
                    }
                    
                    System.out.print("Criar Apelido (Opcional): ");
                    nickName = s.nextLine();

                    System.out.print("Crie uma senha: ");
                    password = s.nextLine();

                    System.out.print("Digite a senha novamente: ");
                    passwordConfirm = s.nextLine();
                    while (!password.equals(passwordConfirm)) {
                        System.out.print("Suas senhas nao estao compativeis\nDigite novamente a senha: ");
                        password = s.next();
                        System.out.print("Verifique a senha: ");
                        passwordConfirm = s.next();
                    }
                    if (nickName.isEmpty() == true) {
                        nickName = "Convidado";
                    }
                    System.out.println("Bem Vndo Ao UNIKUT!");
                    System.out.println(nickName);
                    System.out.println("Conta criada com sucesso");
                    
                    //Criando a conta com os atributos coletados
                    social.criarConta(login, nickName, password/*, passwordConfirm*/);
                    
                    menuMain();
                    int opcao2 = s.nextInt();
                    s.nextLine();
                    while (opcao2 != 5) {
                        switch (opcao2) {
                            case 1 -> {
                            }
                            case 2 -> {
                            }
                            case 3 -> {
                            }
                            case 4 -> {
                            }
                            default -> System.out.println("Comando invÃ¡lido");
                        }
                        // Editar perfil
                        // Exibir amigos
                        // Adicionar amigos
                        // Enviar recados

                        menuMain();
                        opcao2 = s.nextInt();
                        s.nextLine();
                    }
                }
                case 2 -> {
                    //Login
                    System.out.print("Login: ");
                    login = s.nextLine();
                    while (!social.verificaLogin(login) ) {
                        System.out.print("Erro:\nLogin NÃ£o Existente\nPor Favor usar outro Login: ");
                        login = s.nextLine();
                    }
                    System.out.print("Senha: ");
                    password = s.nextLine();
                    while (!social.verificaSenha(login,password)) {
                        System.out.print("Erro:\nSenha Incorreta\nPor Favor tente novamente: ");
                        password = s.nextLine();
                    }
                    menuMain();
                    int opcao2 = s.nextInt();
                    s.nextLine();
                    while (opcao2 != 5) {
                        switch (opcao2) {
                            case 1 -> {
                            }
                            case 2 -> {
                            }
                            case 3 -> {
                            }
                            case 4 -> {
                            }
                            default -> System.out.println("Comando invÃ¡lido");
                        }
                        // Editar perfil
                        // Exibir amigos
                        // Adicionar amigos
                        // Enviar recados

                        menuMain();
                        opcao2 = s.nextInt();
                        s.nextLine();
                    }
                }
                default -> System.out.println("Comando invÃ¡lido");

            }

            System.out.println("\nCerto...\n");
            menuStart();
            opcao = s.nextInt();
            s.nextLine();
        }
    }

